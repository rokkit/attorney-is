
<div class="container" style="margin-top: 90px;">

<%= form_for(resource, :as => resource_name, html: { class: "form-signin"}, :url => session_path(resource_name)) do |f| %>
        <h2 class="form-signin-heading">Информационная система</h2>
	  	<%= f.email_field :email, :autofocus => true, class: "input-block-level" %>
	  	<%= f.password_field :password,  class: "input-block-level"  %>

        <label class="checkbox">
        </label>
	  <%= f.submit "Вход", class: "btn" %>
     <% end %>

<%= render "devise/shared/links" %>
    </div>

        <style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 400px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="email"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>
