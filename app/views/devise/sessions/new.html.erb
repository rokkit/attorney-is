<h2>Вход в систему</h2>

<%= form_for(resource, :as => resource_name, html: { class: "login-form form-horizontal"}, :url => session_path(resource_name)) do |f| %>
  <div class="email control-group">
  	<%= f.label :email, "Почта", class: "control-label" %>
  	<div class="controls">
	  	<%= f.email_field :email, :autofocus => true %>
	  </div>
	</div>

  <div class="password control-group">
  	<%= f.label :password, "Пароль", class: "control-label" %>
  	<div class="controls">
	  	<%= f.password_field :password %>
	  </div>
	</div>
	
	<div class="control-group">
    <div class="controls">
	  <% if devise_mapping.rememberable? -%>
	    <label class="checkbox">
	    	<%= f.check_box :remember_me %> <%= f.label :remember_me, "Оставаться в системе" %>
	    </label>
	  <% end -%>

	  <%= f.submit "Вход", class: "btn" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
