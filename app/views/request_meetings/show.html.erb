<div id="show-request-meetings">

	<div class="lawyer">
	  <h4>Адвокат:</h4>
	  <p><%= @request_meeting.user %></p>
	</div>

	<div class="meeting">
	  <h4>Заседание:</h4>
	  <p><%= link_to @request_meeting.meeting, @request_meeting.meeting %></p>
	</div>

	<div class="status">
	  <h4>Статус:</h4>
	  <p><%= status @request_meeting.status %></p>
	</div>
  <% if @request_meeting.status == 2 && @request_meeting.user == current_user %>
    <div>
      Для подтверждения заявки отправьте полученный на телефон код поддтверждения
      <%= form_tag confirm_request_meeting_path(@request_meeting) do %>
        <%= text_field_tag :confirm_token %>
        <%= submit_tag "Подтвердить" %>
      <% end %>
    </div>
  <% end %>

</div>

<%= link_to 'Назад', request_meetings_path, class: "btn back entypo-left-open-big" %>
