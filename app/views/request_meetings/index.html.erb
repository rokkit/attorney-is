<h1>Listing request_meetings</h1>

<table>
  <tr>
    <th>User</th>
    <th>Meeting</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @request_meetings.each do |request_meeting| %>
  <tr>
    <td><%= request_meeting.user %></td>
    <td><%= request_meeting.meeting %></td>
    <td><%= request_meeting.status %></td>
    <td><%= link_to 'Show', request_meeting %></td>
    <% if can? :manage, :all %>
        <td><%= link_to 'Подтвердить', approve_request_meeting_path(request_meeting), method: :post %></td>
        <td><%= link_to 'Отменить', cancel_request_meeting_path(request_meeting), method: :post %></td>
        <td><%= link_to 'Edit', edit_request_meeting_path(request_meeting) %></td>
        <td><%= link_to 'Destroy', request_meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

