<h1>Заявки на заседания</h1>
<h2><%= @domain.try :name %></h2>

<table id="show-meeting-requests" class="table table-bordered">
  <thead>
    <tr>
      <th>№</th>
      <th>Заседание</th>
      <% if current_user.admin? %>
      <th>Адвокат</th>
      <% end %>
      <th>Дата заявки</th>
      <th>Статус</th>
      <% if can? :manage, :all %>
      <th>Адм. функции</th>
      <% end %>
    </tr>
  </thead>
  <tbody>

<% @request_meetings.each do |request_meeting| %>
  <tr>
      <td><%= request_meeting.id %></td>
      <td><%= link_to request_meeting.meeting, request_meeting.meeting  %></td>
      
      
      <% if current_user.admin? %>
          <td><%= link_to request_meeting.user, request_meeting.user  %></td>
      <% end %>
      <td><%= request_meeting.meeting.will_be_on.strftime("%d.%m.%Y") %></td>
      <td class="status"><%= status request_meeting.status %></td>
      <td class="actions">

        <%= link_to raw('Подробнее'), request_meeting, class: "" %>
        <% if can? :manage, request_meeting %>
          <%= link_to 'Отменить', cancel_request_meeting_path(request_meeting), method: :post, class: "" %>
         <% end %>
      <% if can? :manage, :all and request_meeting.status != 2%>
        <%= link_to 'Подтвердить', approve_request_meeting_path(request_meeting), method: :post, class: "" %>
      <% end %>
      </td>
    </tr>

<% end %>
  </tbody>
  <tfoot>
      <th colspan="2">Поисковая система</th>
      <th>Поиск по ФИО</th>
   
      <th colspan='3'></th>
  
  </tfoot>
</table>
<p id="periodFilter"></p>
