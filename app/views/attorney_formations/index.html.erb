<h3>Административная панель</h3>
<h4>Адвокатские образования</h4>

<table class="table table-bordered users-table">
  <tr>
    <th>Название</th>
    <th>Телефон</th>
    <th>Адрес</th>
    <th>Почта</th>
    <th>Сайт</th>
    <th colspan="3"></th>
  </tr>

<% @attorney_formations.each do |attorney_formation| %>
  <tr>
    <td><%= attorney_formation.name %></td>
    <td><%= attorney_formation.phone %></td>
    <td><%= attorney_formation.address %></td>
    <td><%= attorney_formation.email %></td>
    <td><%= attorney_formation.site %></td>
    <td><%= link_to 'Подробнее', attorney_formation %></td>
    <td><%= link_to 'Изменить', edit_attorney_formation_path(attorney_formation) %></td>
    <td><%= link_to 'Удалить', attorney_formation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

