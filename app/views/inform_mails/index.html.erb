<h1>Архив сообщений</h1>

<table class="table">
  <tr>
    <th width="18%">Получатель</th>
    <th>Сообщение</th>
    <th>СМС</th>
    <th>Отравлено</th>
  </tr>

<% @inform_mails.each do |inform_mail| %>
  <tr>
    <td><%= inform_mail.user %></td>
    <td><%= inform_mail.body %></td>
    <td><%= inform_mail.sms_body || '-' %></td>
    <td><%= inform_mail.created_at %></td>
  </tr>
<% end %>
</table>

