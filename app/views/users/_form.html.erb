<%= form_for @user, html: {id: "invite"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> ошибок не позволило создать пользователя:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :fio, "Ф.И.О" %>
  <%= f.text_field :fio %>
  <% if can? :manage, :all %>
    <%= f.label :phone, "Телефон" %>
    <div class="input-prepend">
      <span class="add-on">+</span>
      <%= f.telephone_field :phone, class:"form-control" %>
    </div>
    <%= f.label :register_number, "Номер реестра" %>
    <%= f.telephone_field :register_number %>
  <% end %>
  <%= f.label :email, "Почта" %>
  <%= f.email_field :email %>
  
  <div class="actions">
    <%= f.submit "Добавить" %>
  </div>
<% end %>
