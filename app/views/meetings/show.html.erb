<div id="show-meeting">
	<div class="info">
	  <h4>Дополнительная информация:</h4>
	  <p><%= @meeting.content %></p>
	</div>

	<div class="date">
	  <h4>Дата:</h4>
	  <p><%= @meeting.will_be_on %></p>
	</div>

	<div class="lawyer">
	  <h4>Назначенный адвокат:</h4>
	  <p><%= @meeting.user %></p>
	</div>

	<div class="actions">
		<% if can? :manage, :all %>
			<%= link_to 'Изменить', edit_meeting_path(@meeting), class: "edit entypo-pencil" %>
		<% end %>
		<% if can? :request, @meeting %>
		    | <%= link_to 'Подать заявку', request_for_meeting_path, method: :post, class: "make-request entypo-user-add" %>
		<% end %>
	</div>
	<%= link_to 'Назад', meetings_path, class: "btn back entypo-left-open-big" %>
</div>
