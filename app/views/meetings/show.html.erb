<div id="show-meeting">
    <h1>Судебное заседание</h1>
	<div class="lawyer">
	  <h4>Дата проведения:</h4>
	  <p><%= "#{@meeting.will_be_on} #{ @meeting.will_be_at}" %></p>
	</div>
	<div class="lawyer">
	  <h4>Место проведения:</h4>
	  <p><%= "#{@meeting.domain.name}" %></p>
	</div>
	<div class="lawyer">
	  <h4>Назначенный адвокат:</h4>
	  <p><%= @meeting.user || "Нет" %></p>
	</div>
	<div class="lawyer">
	  <h4>Судья:</h4>
	  <p><%= @meeting.judge || "Не указан" %></p>
	</div>
	<div class="lawyer">
	  <h4>Клиент:</h4>
	  <p><%= @meeting.client || "Не указан" %></p>
	</div>
    <% unless @meeting.content.empty? %>
    	<div class="dop-info">
    	  <h4>Дополнительная информация:</h4>
    	  <p><%= @meeting.content %></p>
    	</div>
    <% end %>
    
    <% if current_user.admin? && !@meeting.request_meetings.empty?  %>
    <h4>На заседание записались:</h4>
    <ul>
        <% @meeting.request_meetings.each do |request_meeting| %>
        <li>
           <%= link_to request_meeting.user, request_meeting.user %> 
           <%= link_to 'Отменить', cancel_request_meeting_path(request_meeting), method: :post, class: "btn cancel entypo-cancel-circled" %>
           <%= link_to 'Подтвердить', approve_request_meeting_path(request_meeting), method: :post, class: "btn approve entypo-check" %>
        </li>
        <% end %>
    </ul>
    <% end %>


	<div class="actions">
		<% if can? :request, @meeting and !current_user.admin? %>
		    <%= link_to 'Подать заявку', request_for_meeting_path, method: :post, class: "btn make-request entypo-user-add" %> |
		<% end %>
		<% if can? :manage, :all %>
			<%= link_to 'Изменить', edit_meeting_path(@meeting), class: "edit entypo-pencil" %>
			<%= link_to 'Снять адвоката с дежурства', request_meeting_path(RequestMeeting.where(user_id: @meeting.user, meeting_id: @meeting).first) if @meeting.user.present? %>

		<% end %>
	</div>
</div>
